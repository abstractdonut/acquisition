<AboutScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        
        AboutLayout

<AboutLayout@GridLayout>:
    rows: 1
    cols: 3
    
    size_hint: 1, 1
    
    Label:
        size_hint: .1, 1
        text: ''
    GridLayout:
        rows: 6
        cols: 1
        size_hint: .4, 1
        
        Label:
            text: ''
        
        Paragraph:
            text: "Created by [color=d4af37]David Grischuk[/color] and [color=d4af37]Micah Borden[/color]"
        
        Paragraph:
            text: "Acquisition is [color=d4af37]free[/color], [color=d4af37]free from ads[/color], and [color=d4af37]opensource[/color]"
        
        Paragraph:
            text: "Source code available at [u][color=d4af37][ref=<https://github.com/abstractdonut/acquisition>]github.com/abstractdonut/acquisition[/ref][/color][/u]"
            on_ref_press:
                import webbrowser
                webbrowser.open('https://github.com/abstractdonut/acquisition')
        
        Paragraph:
            text: "Wallpaper from [u][color=d4af37][ref=<https://www.freepik.com/free-vector/elegant-white-texture-background_6765110.htm#page=1&query=white%20texture&position=12#&position=12>]freepik.com[/ref][/color][/u]"
            on_ref_press:
                import webbrowser
                webbrowser.open('https://www.freepik.com/free-vector/elegant-white-texture-background_6765110.htm#page=1&query=white%20texture&position=12#&position=12')
        
        Label:
            text: ''
    
    Label:
        size_hint: .1, 1
        text: ''



