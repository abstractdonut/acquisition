<SettingsScreen>:
    GridLayout:
        rows: 2
        cols: 1
        TitleLabel:
            id: title
            size_hint: 1, .15
            text_size: self.size
            halign: "center"
            text: "SETTINGS"
            font_size: "30dp"
        GridLayout:
            rows: 11
            cols: 1
            ButtonLabel:
                id: board_size
                font_size: "20dp"
                text: "board size is 7, 7"
                on_press: root.alter_board_size()
            ButtonLabel:
                id: mode
                font_size: "20dp"
                text: "move by drag"
                on_press: root.alter_mode()
            ButtonLabel:
                id: player1
                font_size: "20dp"
                text: "player 1 is human"
                on_press: root.alter_player1()
            ButtonLabel:
                id: player2
                font_size: "20dp"
                text: "player 2 is a computer"
                on_press: root.alter_player2()
            ButtonLabel:
                id: difficulty
                font_size: "20dp"
                text: "computer difficulty is challenging"
                on_press: root.alter_difficulty()
            ButtonLabel:
                id: sound
                font_size: "20dp"
                text: "sound enabled"
                on_press: root.alter_sound()
            ButtonLabel:
                id: speed
                font_size: "20dp"
                text: "move animation speed is fast"
                on_press: root.alter_speed()
            ButtonLabel:
                id: grid
                font_size: "20dp"
                text: "grid is enabled"
                on_press: root.alter_grid()
            ButtonLabel:
                id: allowed
                font_size: "20dp"
                text: "show legal moves"
                on_press: root.alter_allowed()
#            ButtonLabel:
#                id: font
#                text: "using Brendohand font"
#                on_press: root.alter_font()
            Label:
                text: ''
                size_hint: 1, 0.45
            ImageButton:
                size_hint: 1, .8
                on_release: app.root.escape()
                source: "images/icons/back.png"


