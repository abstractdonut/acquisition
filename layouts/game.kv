<GameScreen>:
    GridLayout:
        id: container
        rows: 8
        cols: 1
        GridLayout:
            rows: 4
            cols: 1
            size_hint: 1, .2
            Label:
                text: ""
            CustomLabel:
                size_hint: 1, .3    
                id: status
                text: ""
            Label:
                text: ""
            GridLayout: # Scores
                rows: 1
                cols: 2
                CustomLabel:
                    id: score1
                    text: '[color=d4af37]0[/color]'
                CustomLabel:
                    id: score2
                    text: '[color=b0c4de]0[/color]'
        FloatLayout:
            PieceLayout:
                size_hint: None, None
                id: piece_layout
        FloatLayout:
            size_hint: 1, .075
            GridLayout:
                id: controls
                rows: 1
                cols: 3
                size_hint: None, 1
                center_x: self.parent.center_x
                y: self.parent.y
                ImageButton:
                    id: undo
                    on_release: root.undo()
                    source: "images/icons/undo_black.png"
                ImageButton:
                    id: reset
                    on_release: root.reset()
                    source: "images/icons/restart_black.png"
                ImageButton:
                    id: redo
                    on_release: root.redo()
                    source: "images/icons/redo_black.png"
        FloatLayout:
            size_hint: 1, .075
        FloatLayout:
            size_hint: 1, .075
            GridLayout:
                id: nav
                rows: 1
                cols: 4
                pos: self.parent.pos
                size_hine: None, 1
                ImageButton:
                    id: toggle_sound
                    on_release: root.toggle_sound()
                    source: "images/icons/volume_black.png"
                ImageButton:
                    id: toggle_grid
                    on_release: root.toggle_grid()
                    source: "images/icons/grid_black.png"
                ImageButton:
                    id: goto_settings
                    on_release: root.goto_settings()
                    source: "images/icons/settings_black.png"
                ImageButton:
                    id: goto_help
                    on_release: root.goto_help()
                    source: "images/icons/help_black.png"
        FloatLayout:
            size_hint: 1, .075
# DISABLE/ENABLE BUTTON BY (UN)COMMENTING
        FloatLayout:
            size_hint: 1, .1
            ImageButton:
                pos: self.parent.pos
                #size_hint: None, 1
                on_release: app.root.escape()
                source: "images/icons/back.png"

<ChipPiece>:
    size_hint: None, None
    Image:
        id: background
        size_hint: None, None
        size: self.parent.size
        pos: self.parent.pos
    Image:
        id: gray
        size_hint: None, None
        size: self.parent.size
        pos: self.parent.pos
    Image:
        id: red
        size_hint: None, None
        size: self.parent.size
        pos: self.parent.pos

<Piece>:
    size_hint: None, None
    Image:
        id: background
        size_hint: None, None
        size: self.parent.size
        pos: self.parent.pos
        allow_stretch: True
    Image:
        id: foreground
        size_hint: None, None
        size: self.parent.size
        pos: self.parent.pos
        allow_stretch: True
























