<TitleScreen>:
    GridLayout:
        rows: 2
        cols: 1
#        TitleLabel:
#            id: title
#            size_hint: 1, .35
#            text: "ACQUISITION"
#            font_size: 36
        Image:
            id: title
            size_hint: 1, .3
            source: "images/logo/title/Acquisition-logo-4.png"
        GridLayout:
            rows: 8
            cols: 1
            ButtonLabel:
                id: play
                text: "New Game"
                on_press: root.play()
            ButtonLabel:
                id: continue_game
                text: "Continue"
                on_press: root.continue_game()
            ButtonLabel:
                id: variants
                text: "Variants"
                on_press: root.variants()
            ButtonLabel:
                id: help
                text: "Help "
                on_press: root.help()
            ButtonLabel:
                id: settings
                text: "Settings"
                on_press: root.settings()
            ButtonLabel:
                id: about
                text: "About"
                on_press: root.about()
            Label:
                text: ""
